---
interface Props {
  src: string;
  title: string;
  body: string;
}
const { src, title, body } = Astro.props;
---

<article class="text-center">
  <div class="w-full h-auto flex flex-col items-center justify-center mb-4">
    <figure class="">
      <img class="size-14" src={src} alt="" />
    </figure>
  </div>
  <h2 class="text-lg leading-loose lg:text-xl font-tiempos text-[#1A1715] my-4">
    {title}
  </h2>
  <div>
    <p class="text-sm lg:text-[0.95rem] leading-loose text-podia-description">
      {body}
    </p>
  </div>
</article>
