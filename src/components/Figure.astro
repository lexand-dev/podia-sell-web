---
interface Props {
  src: string
  alt: string
  class?: string
}
const { class: className, src, alt } = Astro.props
---
<figure class="rounded-lg overflow-hidden">
  <picture>
    <img class={
      `
        w-full
        h-auto
        object-cover
        object-center
        ${className}
      `
    } src={src} alt={alt}>
  </picture>
</figure>