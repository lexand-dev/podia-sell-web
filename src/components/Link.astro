---
interface Props {
  class?: string;
  href: string;
}
const { class: className, href } = Astro.props;
---

<a
  class={`link-footer text-base mb-2 text-podia-description ${className}`}
  href={href}
>
  <slot />
</a>

<style>
  .link-footer {
    text-decoration: underline;
    text-underline-position: under;
  }
</style>
